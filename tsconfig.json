{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6"
        ],
        "target": "ES2015",
        "module": "CommonJS",
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "rootDir": "src/*",
    "outDir": "./dist",
}